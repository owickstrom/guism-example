build-type:          Simple

library
  hs-source-dirs:      lib
  build-depends:       base >=4.12 && <4.13
                     , async
                     , gi-gdk
                     , gi-glib
                     , gi-gtk
                     , gi-gtk-declarative >= 0.6.3 && < 0.7
                     , indexed
                     , motor
                     , mtl
                     , row-types
                     , text
                     , vector
